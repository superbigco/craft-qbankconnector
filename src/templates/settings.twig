{% import "_includes/forms" as forms %}

{{ forms.textField({
    label: 'Client ID',
    instructions: 'The Client ID you received from QBank.',
    id: 'clientId',
    name: 'clientId',
    required: true,
    autofocus: true,
    value: settings['clientId']})
}}

{{ forms.textField({
    label: 'Username',
    instructions: 'The username you received from QBank.',
    id: 'username',
    name: 'username',
    required: true,
    value: settings['username']})
}}

{{ forms.textField({
    label: 'Password',
    instructions: 'The password you received from QBank.',
    id: 'password',
    name: 'password',
    required: true,
    value: settings['password']})
}}

{{ forms.textField({
    label: 'Session Source ID',
    instructions: 'The Session Source ID you received from QBank.',
    id: 'sessionSourceId',
    name: 'sessionSourceId',
    required: true,
    value: settings['sessionSourceId']})
}}

{{ forms.textField({
    label: 'Deployment Site ID',
    instructions: 'The Deployment Site ID you received from QBank.',
    id: 'deploymentSiteId',
    name: 'deploymentSiteId',
    required: true,
    value: settings['deploymentSiteId']})
}}

{{ forms.textField({
    label: 'QBank Base Domain',
    instructions: 'The domain to make API calls against',
    id: 'qbankBaseDomain',
    name: 'qbankBaseDomain',
    required: true,
    value: settings['qbankBaseDomain']})
}}

{{ forms.lightswitchField({
    label: 'Cache Session ID',
    instructions: 'This will prevent the plugin for making a request every time it needs a session ID',
    id: 'cacheSessionId',
    name: 'cacheSessionId',
    on: settings['cacheSessionId']})
}}

{{ forms.lightswitchField({
    label: 'Assets Fields',
    instructions: 'Show the QBank upload button on Asset Fields',
    id: 'enableForAssetFields',
    name: 'enableForAssetFields',
    on: settings['enableForAssetFields']})
}}

{{ forms.lightswitchField({
    label: 'Assets Index',
    instructions: 'Show the QBank upload button on Asset Indexes',
    id: 'enableForAssetIndex',
    name: 'enableForAssetIndex',
    on: settings['enableForAssetIndex']})
}}

{{ forms.checkboxSelectField({
    label: 'Searchable Properties',
    instructions: 'Select which properties, like keywords, to add to the search index. This is used in combination with a custom field that is added to the Assets Field Layout.',
    id: 'searchableProperties',
    name: 'searchableProperties',
    values: settings['searchableProperties'],
    options: availableProperties, })
}}